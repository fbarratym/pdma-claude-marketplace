<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- Enable directory browsing (optional, for easier navigation) -->
    <directoryBrowse enabled="false" />

    <!-- Static content settings -->
    <staticContent>
      <!-- Add MIME types for markdown files -->
      <mimeMap fileExtension=".md" mimeType="text/markdown" />
      <mimeMap fileExtension=".json" mimeType="application/json" />

      <!-- Enable compression for better performance -->
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="1.00:00:00" />
    </staticContent>

    <!-- URL Rewrite for clean URLs (optional) -->
    <rewrite>
      <rules>
        <!-- Allow direct access to files -->
        <rule name="StaticContent" stopProcessing="true">
          <match url="^(.+\.(json|md|txt|html))$" />
          <action type="None" />
        </rule>
      </rules>
    </rewrite>

    <!-- CORS headers for cross-origin access -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type" />
      </customHeaders>
    </httpProtocol>

    <!-- Default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="README.md" />
      </files>
    </defaultDocument>

    <!-- Error handling -->
    <httpErrors errorMode="Detailed" />
  </system.webServer>
</configuration>
